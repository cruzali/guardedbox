{
    "general": {
        "emailMaxLength": 254,
        "emailPattern": ".+@.+\\..{2,}",
        "showSuccessTime": 1500
    },
    "registration": {
        "registrationTokenPattern": "^[a-zA-Z0-9]{86}$",
        "passwordMinLength": 20,
        "passwordMinStrength": 100
    },
    "session": {
        "timeout": 1800
    },
    "secrets": {
        "secretNameMaxLength": 100,
        "secretKeyMaxLength": 100,
        "secretValueMaxLength": 4000,
        "secretMaxKeyValuePairs": 10,
        "secretStrengthMaxLength": 40,
        "showSecretTime": 2500,
        "randomSecretCharsets": [
            {
                "name": "lowerCaseLetters",
                "charset": "abcdefghijklmnopqrstuvwxyz"
            },
            {
                "name": "upperCaseLetters",
                "charset": "ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            },
            {
                "name": "numbers",
                "charset": "0123456789"
            },
            {
                "name": "symbols1",
                "charset": "!@#$%^&*()"
            },
            {
                "name": "symbols2",
                "charset": "\"+-/\\|.,;:=<>[]{}'`?_~"
            }
        ]
    },
    "groups": {
        "groupNameMaxLength": 100
    },
    "headers": {
        "sessionId": "X-Auth-Token",
        "appLanguage": "X-App-Language"
    },
    "cryptography": {
        "length": 32,
        "ecc": {
            "ecdhCurve": "curve25519",
            "eddsaCurve": "ed25519",
            "pbkdf2Hash": "sha256",
            "pbkdf2Iterations": 10000
        },
        "aes": {
            "mode": "aes-256-gcm",
            "ivLength": 12
        }
    }
}
