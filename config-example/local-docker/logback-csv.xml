<configuration>

    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} - %-5level - %logger : %message%n</pattern>
        </encoder>
    </appender>

    <logger name="root">
        <appender-ref ref="consoleAppender" />
    </logger>

</configuration>
